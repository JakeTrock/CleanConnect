{
  "compilerOptions": {
    "lib": ["es2020"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    // "strictNullChecks": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./lib"
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    "unitTesting/**/*",
    ".serverless/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}